<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/icon_size_60">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:id="@+id/rlIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_size_60">
        <View
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_size_60">

            <RelativeLayout
                android:id="@+id/rlAds"
                android:layout_width="@dimen/icon_size_30"
                android:layout_height="@dimen/icon_size_30">
                <androidx.appcompat.widget.AppCompatTextView
                    android:background="@color/grey_light"
                    android:id="@+id/tvAds"
                    android:textColor="@color/white"
                    android:text="@string/ad"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/icon_size_25"
                    android:layout_height="@dimen/icon_size_25"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_toEndOf="@+id/rlAds"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin_20"
                android:id="@+id/cardView"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/margin_10"
                android:layout_width="@dimen/icon_size_40"
                android:layout_height="@dimen/icon_size_40">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgAds"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:layout_width="@dimen/icon_size_40"
                    android:layout_height="@dimen/icon_size_40"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_toStartOf="@+id/rlNext"
                android:layout_toEndOf="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_size_60">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_above="@+id/viewCenter"
                    android:textSize="@dimen/medium_18"
                    style="@style/brandonRegularTextInputLayout"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin_20"
                    android:text="@string/pro_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/viewCenter"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_below="@+id/viewCenter"
                    android:layout_marginStart="@dimen/margin_20"
                    android:textColor="@color/grey_light"
                    android:text="@string/no_advertising"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlNext"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <tpcreative.co.qrscanner.common.view.CircleImageView
                    app:srcCompat="?attr/colorAccent"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_centerInParent="true"
                    android:id="@+id/imgCircleAds"
                    android:layout_width="@dimen/icon_size_40"
                    android:layout_height="@dimen/icon_size_40"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/icon_size_40"
                    android:layout_height="@dimen/icon_size_40"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/margin_2"
                    app:srcCompat="@drawable/ic_next"
                    app:tint="@color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>