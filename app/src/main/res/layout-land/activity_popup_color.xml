<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/overlay_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlRootClose"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_5"/>
        <com.davidmiguel.dragtoclose.DragToClose
            android:layout_below="@+id/rlRootClose"
            xmlns:drag="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/drag_to_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            drag:dragtoclose_draggableContainer="@+id/card"
            drag:dragtoclose_draggableView="@+id/includeDragToClose"
            drag:dragtoclose_finishActivity="true"
            tools:context="com.davidmiguel.sample.Card1Activity">

            <RelativeLayout
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_primary_color">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_weight="0.9"
                            android:layerType="software"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <com.google.android.material.button.MaterialButtonToggleGroup
                                android:theme="@style/MaterialToggleGroup"
                                android:gravity="center_horizontal"
                                android:id="@+id/toggleGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:checkedButton="@+id/btnGrid"
                                app:selectionRequired="true"
                                app:singleSelection="true">

                                <com.google.android.material.button.MaterialButton
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:id="@+id/btnGrid"
                                    android:layout_width="@dimen/icon_size_100"
                                    android:layout_height="wrap_content"
                                    android:onClick="onClick"
                                    android:text="@string/grid"/>

                                <com.google.android.material.button.MaterialButton
                                    style="?attr/materialButtonOutlinedStyle"
                                    android:id="@+id/btnSlider"
                                    android:layout_width="@dimen/icon_size_100"
                                    android:layout_height="wrap_content"
                                    android:onClick="onClick"
                                    android:text="@string/slider"/>

                            </com.google.android.material.button.MaterialButtonToggleGroup>

                            <RelativeLayout
                                android:id="@+id/rlGroupColor"
                                android:layout_below="@+id/toggleGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.panshen.gridcolorpicker.GridColorPicker
                                    android:id="@+id/colorPicker"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    app:gcp_alphaViewLabelColor="@color/black"
                                    app:gcp_alphaViewLabelText="@string/opacity"
                                    app:gcp_cardColor="@color/white"
                                    app:gcp_colorScheme="@array/colors"
                                    app:gcp_row="10"
                                    app:gcp_selectorColor="@color/colorAccent"
                                    app:gcp_showAlphaView="false"
                                    app:gcp_showAlphaViewLabel="false" >
                                </com.panshen.gridcolorpicker.GridColorPicker>
                            </RelativeLayout>
                        </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1.1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <include
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/icon_size_60"
                            android:id="@+id/includeDragToClose"
                            layout="@layout/popup_header" />
                        <RelativeLayout
                            android:layout_below="@+id/includeDragToClose"
                            android:id="@+id/rlReview"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/icon_size_200">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgReviewColor"
                                android:layout_margin="@dimen/margin_10"
                                android:background="@color/colorAccent"
                                android:layout_width="@dimen/icon_size_80"
                                android:layout_height="@dimen/icon_size_80"/>
                            <HorizontalScrollView
                                android:scrollbars="none"
                                android:id="@+id/horizontalScrollView"
                                android:layout_toEndOf="@+id/imgReviewColor"
                                android:layout_marginTop="@dimen/margin_10"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_size_40">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/rlGroup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/icon_size_40">
                                </LinearLayout>
                            </HorizontalScrollView>
                            <RelativeLayout
                                android:layout_toEndOf="@+id/imgReviewColor"
                                android:layout_below="@+id/horizontalScrollView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/icon_size_40">
                                <tpcreative.co.qrscanner.common.view.CircleImageView
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:id="@+id/imgAdd"
                                    android:layout_width="@dimen/margin_30"
                                    android:layout_height="@dimen/margin_30"/>

                                <tpcreative.co.qrscanner.common.view.CircleImageView
                                    android:id="@+id/imgIconAdd"
                                    android:src="@drawable/ic_add"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:padding="@dimen/margin_7"
                                    android:layout_width="@dimen/margin_30"
                                    android:layout_height="@dimen/margin_30"/>

                                <tpcreative.co.qrscanner.common.view.CircleImageView
                                    android:layout_toEndOf="@+id/imgAdd"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:id="@+id/imgDelete"
                                    android:layout_width="@dimen/margin_30"
                                    android:layout_height="@dimen/margin_30"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgIconDelete"
                                    android:src="@drawable/ic_close"
                                    android:layout_toEndOf="@+id/imgAdd"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:padding="@dimen/margin_7"
                                    android:layout_width="@dimen/margin_30"
                                    android:layout_height="@dimen/margin_30"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </com.davidmiguel.dragtoclose.DragToClose>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>