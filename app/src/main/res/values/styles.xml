<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->

    <style name="PopupMenuLight" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/material_gray_200</item>
    </style>

    <style name="PopupMenuDark" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/material_gray_800</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorDark</item>
        <item name="android:textColorSecondary">@color/material_gray_600</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        /*Preference theme*/
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <!--Action mode -->
        <item name="actionModeStyle">@style/CustomActionModeStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarStyle.Overflow</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>


    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <!-- Makes the toolbar text whatever color you want for both light/dark-->
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarStyle.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <!-- For toolbar menu -->
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <!-- For the hamburger menu, back button, etc -->
        <item name="tint">@color/white</item>
    </style>

    <style name="CustomActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/multiple_image_select_toolbarPrimaryText</item>
        <item name="android:actionMenuTextColor">@color/multiple_image_select_toolbarPrimaryText</item>
    </style>

    <style name="AppBaseThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorBlueLight</item>
        <item name="android:textColorPrimary">@color/colorBlueLight</item>
        <item name="android:textColorSecondary">@color/colorBlueLight</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
    </style>


    <style name="AppBaseThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorBlueLight</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDarkV1</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDarkV1</item>
        <item name="android:popupMenuStyle">@style/PopupMenuLight</item>
    </style>


    <style name="MyAppCustomTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="LightDialogTheme" parent="@style/MaterialDialog.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--
        <item name="android:fontFamily">@font/brandon_regs</item>
        !-->

    </style>

    <style name="DarkDialogTheme" parent="@style/MaterialDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--
        <item name="android:fontFamily">@font/brandon_regs</item>
        !-->
    </style>


    <style name="brandonRegularTextView" parent="TextAppearance.AppCompat">
        <!--
        <item name="android:fontFamily">@font/brandon_regs</item>
        -->
        <item name="android:textSize">@dimen/medium_16</item>
    </style>


    <style name="brandonBoldTextView" parent="TextAppearance.AppCompat">
        <!--
        <item name="android:fontFamily">@font/brandon_blds</item>
        -->
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="brandonRedBoldTextView" parent="TextAppearance.AppCompat">
        <!--
        <item name="android:fontFamily">@font/brandon_blds</item>
        -->
    </style>

    <style name="TransparentCompat" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>
