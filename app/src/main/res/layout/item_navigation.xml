<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/rlHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlBasic"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:tint="?attr/colorAccent"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:id="@+id/imgAction"
                android:layout_width="@dimen/icon_size_27"
                android:layout_height="@dimen/icon_size_27"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/brandonRegularSmallTextInputLayout"
                android:paddingStart="10dp"
                android:layout_marginStart="@dimen/icon_size_30"
                android:id="@+id/tvTitle"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlAdvance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15">
            <RelativeLayout
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:id="@+id/rlViewCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgTypeQRCode"
                    android:layout_width="@dimen/icon_size_27"
                    android:layout_height="@dimen/icon_size_27"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_qrcode" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtViewCode"
                    style="@style/brandonRegularSmallTextInputLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_toEndOf="@+id/imgTypeQRCode"
                    android:text="@string/view_code"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/rlViewCode">
                <androidx.appcompat.widget.AppCompatImageView
                    android:padding="@dimen/margin_7"
                    android:id="@+id/imgTakeNote"
                    android:layout_width="@dimen/icon_size_40"
                    android:layout_height="@dimen/icon_size_40"
                    android:layout_marginStart="20dp"
                    android:layout_toStartOf="@+id/imgMarkFavorite"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@drawable/ic_note" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:padding="@dimen/margin_7"
                    android:id="@+id/imgMarkFavorite"
                    android:layout_width="@dimen/icon_size_40"
                    android:layout_height="@dimen/icon_size_40"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>