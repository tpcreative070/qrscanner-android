<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/flContainer_history_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_marginBottom="@dimen/margin_18"
        android:id="@+id/rlRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_margin="10dp"
            android:id="@+id/rlActionTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCount"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:foreground="@drawable/item_effect"
                android:id="@+id/rlCSV"
                android:layout_toStartOf="@+id/rlDelete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_size_35">
                <ImageView
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/margin_1"
                    app:tint="?attr/colorAccent"
                    android:id="@+id/imgCSV"
                    app:srcCompat="@drawable/ic_export"
                    android:layout_width="@dimen/icon_size_27"
                    android:layout_height="@dimen/icon_size_27"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_toEndOf="@+id/imgCSV"
                    android:text="@string/export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:foreground="@drawable/item_effect"
                android:id="@+id/rlDelete"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_size_35">
                <ImageView
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    app:tint="?attr/colorAccent"
                    android:id="@+id/imgDelete"
                    app:srcCompat="@drawable/ic_delete"
                    android:layout_width="@dimen/icon_size_27"
                    android:layout_height="@dimen/icon_size_27"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_toEndOf="@+id/imgDelete"
                    android:text="@string/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

        <com.jaychang.srv.SimpleRecyclerView
            android:layout_below="@+id/rlActionTop"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srv_dividerColor="@null"
            app:srv_dividerOrientation="both"
            app:srv_dividerPaddingBottom="@dimen/margin_5"
            app:srv_dividerPaddingLeft="@dimen/margin_5"
            app:srv_dividerPaddingRight="@dimen/margin_5"
            app:srv_dividerPaddingTop="@dimen/margin_5"
            app:srv_layoutMode="linearVertical"
            app:srv_showDivider="false"
            app:srv_showLastDivider="false"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_margin="@dimen/margin_15"
            android:visibility="invisible"
            android:id="@+id/tvNotFoundItems"
            style="@style/brandonBoldTextView"
            android:textSize="@dimen/medium_16"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/history_scans_will_be_display_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
