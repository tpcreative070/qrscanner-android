<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlRoot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="@dimen/margin_5"
            android:id="@+id/rlIcon"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/icon_size_70"
            android:layout_height="@dimen/icon_size_70">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_centerInParent="true"
                android:id="@+id/imgIcon"
                android:layout_width="@dimen/icon_size_60"
                android:layout_height="@dimen/icon_size_60"/>

            <View
                android:id="@+id/viewSelected"
                android:layout_width="@dimen/icon_size_60"
                android:layout_height="@dimen/icon_size_60"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_selected_highlight"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>