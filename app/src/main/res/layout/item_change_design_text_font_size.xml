<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/ChipGroup"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/my_sub_ripple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="gone"
            android:paddingTop="@dimen/margin_5"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_0"
            android:paddingBottom="@dimen/margin_5"
            android:layout_centerVertical="true"
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/icon_size_30"
            android:layout_height="@dimen/icon_size_30"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_toEndOf="@+id/imgIcon"
            android:gravity="center"
            android:id="@+id/tvFontSize"
            android:paddingEnd="@dimen/margin_10"
            android:paddingStart="@dimen/margin_10"
            android:textSize="@dimen/medium_18"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size_60"/>

        <View
            android:layout_centerInParent="true"
            android:id="@+id/viewSelected"
            android:background="@drawable/bg_selected_highlight"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size_60"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>