<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/rlStandard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlRight"
                android:layout_width="@dimen/icon_size_45"
                android:layout_height="@dimen/icon_size_45">

                <tpcreative.co.qrscanner.common.view.CircleImageView
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/imgStandardCircle"
                    android:layout_width="@dimen/icon_size_30"
                    android:layout_height="@dimen/icon_size_30"/>

                <ImageView
                    android:src="@drawable/baseline_check_white_48"
                    android:layout_centerInParent="true"
                    android:id="@+id/imgStandardIcon"
                    android:layout_width="@dimen/icon_size_18"
                    android:layout_height="@dimen/icon_size_18"/>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginStart="@dimen/margin_5"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/rlRight"
                android:id="@+id/tvStandardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>