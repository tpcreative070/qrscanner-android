<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/zxing_barcode_scanner"
        app:zxing_use_texture_view="true">
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/switch_camera"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_switch_camera_white_36"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/switch_camera"
                android:src="@drawable/baseline_flash_off_white_36"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

    </com.journeyapps.barcodescanner.DecoratedBarcodeView>

    <!-- Sample for a footer. Also add to DecoratedBarcodeView: android:layout_above="@+id/footer" -->
