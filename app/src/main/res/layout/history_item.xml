<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lItem"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/bg_history_rounded"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorDark"
                style="@style/brandonRegularTextView"
                android:id="@+id/tvDate"
                android:text="2:40:35 PM - 8:24:16 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/material_gray_600"
                style="@style/brandonRegularTextView"
                android:id="@+id/tvContent"
                android:text="Distance: 14.0 m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentTop="true"
                android:tint="?attr/colorAccent"
                android:padding="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/imgShare"
                android:src="@drawable/baseline_share_white_48"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/llCheckedBox"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <CheckBox
                android:clickable="false"
                android:visibility="invisible"
                android:id="@+id/ckDelete"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>