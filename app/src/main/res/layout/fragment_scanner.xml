<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/flContainer_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/zxing_barcode_scanner"
            app:zxing_use_texture_view="true">
            <RelativeLayout
                android:layout_alignParentTop="true"
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/switch_camera"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/baseline_switch_camera_white_48"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"/>
                <ImageView
                    android:id="@+id/switch_flashlight"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/switch_camera"
                    android:src="@drawable/baseline_flash_off_white_48"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"/>

                <ImageView
                    android:layout_toLeftOf="@+id/imgGallery"
                    android:layout_centerInParent="true"
                    android:id="@+id/imgCreate"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/baseline_help_white_48"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"/>
                <ImageView
                    android:id="@+id/imgGallery"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/baseline_photo_white_48"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"/>
            </RelativeLayout>
        </com.journeyapps.barcodescanner.DecoratedBarcodeView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>