<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <tpcreative.co.qrscanner.common.preference.MyPreferenceCategory android:title="@string/advance_features"
        android:layout="@layout/custom_preferences_categories">
        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_theme"
            android:title="@string/theme_mode"
            android:key="@string/key_dark_mode"
            android:summary="@string/dark_mode_detail">
        </tpcreative.co.qrscanner.common.preference.MyPreference>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_colors"
            android:title="@string/color_code"
            android:key="@string/key_color_code"
            android:summary="@string/color_code_detail">
        </tpcreative.co.qrscanner.common.preference.MyPreference>

        <tpcreative.co.qrscanner.common.preference.MySwitchPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_refresh"
            android:title="@string/multiple_scan"
            android:key="@string/key_multiple_scan"
            android:defaultValue="false"
            android:summary="@string/multiple_scan_detail">
        </tpcreative.co.qrscanner.common.preference.MySwitchPreference>

        <tpcreative.co.qrscanner.common.preference.MySwitchPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_duplicated"
            android:title="@string/skip_duplicates"
            android:key="@string/key_skip_duplicates"
            android:defaultValue="false"
            android:summary="@string/skip_duplicates_detail">
        </tpcreative.co.qrscanner.common.preference.MySwitchPreference>

        <tpcreative.co.qrscanner.common.preference.MySwitchPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="true"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_cloud"
            android:title="@string/backup_data"
            android:key="@string/key_backup_data"
            android:defaultValue="false"
            android:summary="@string/backup_data_detail">
        </tpcreative.co.qrscanner.common.preference.MySwitchPreference>
    </tpcreative.co.qrscanner.common.preference.MyPreferenceCategory>

    <tpcreative.co.qrscanner.common.preference.MyPreferenceCategory android:title="@string/basic_features"
        android:layout="@layout/custom_preferences_categories">
        <tpcreative.co.qrscanner.common.preference.MySwitchPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_vibrate"
            android:title="@string/vibrate"
            android:defaultValue="true"
            android:key="@string/key_vibrate">
        </tpcreative.co.qrscanner.common.preference.MySwitchPreference>

        <tpcreative.co.qrscanner.common.preference.MySwitchPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_sound"
            android:title="@string/beep"
            android:defaultValue="false"
            android:key="@string/key_beep">
        </tpcreative.co.qrscanner.common.preference.MySwitchPreference>


        <tpcreative.co.qrscanner.common.preference.MySwitchPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_copy"
            android:title="@string/copy_to_clipboard"
            android:key="@string/key_copy_to_clipboard"
            android:defaultValue="false"
            android:summary="@string/copy_to_clipboard_detail">
        </tpcreative.co.qrscanner.common.preference.MySwitchPreference>

        <tpcreative.co.qrscanner.common.preference.MySwitchPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="true"
            android:defaultValue="false"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_network"
            android:title="@string/auto_navigate_to_browser"
            android:summary="@string/auto_navigate_to_browser_detail"
            android:key="@string/key_auto_navigate_to_browser">
        </tpcreative.co.qrscanner.common.preference.MySwitchPreference>
    </tpcreative.co.qrscanner.common.preference.MyPreferenceCategory>

    <tpcreative.co.qrscanner.common.preference.MyPreferenceCategory android:title="@string/key_family_apps" android:key="@string/key_family_apps"
        android:layout="@layout/custom_preferences_categories"
        >
        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="true"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/baseline_security_white_48"
            android:title="@string/supersafe"
            android:key="@string/key_supersafe"
            android:summary="@string/supersafe_detail">
        </tpcreative.co.qrscanner.common.preference.MyPreference>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="true"
            android:layout="@layout/custom_preferences_item"
            android:icon="@drawable/ic_record"
            android:title="@string/save_your_voicemails"
            android:key="@string/key_save_your_voicemails"
            android:summary="@string/save_your_voicemails_detail">
        </tpcreative.co.qrscanner.common.preference.MyPreference>
    </tpcreative.co.qrscanner.common.preference.MyPreferenceCategory>

    <tpcreative.co.qrscanner.common.preference.MyPreferenceCategory android:title="@string/info"
        android:layout="@layout/custom_preferences_categories">
        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_list"
            android:title="@string/app_permission"
            android:key="@string/key_app_permissions"/>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_protect"
            android:title="@string/privacy_policy"
            android:key="@string/key_privacy_policy">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/tvPrimacyPolicy"/>
        </tpcreative.co.qrscanner.common.preference.MyPreference>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:title="@string/give_rate"
            android:icon="@drawable/ic_stars"
            android:key="@string/key_rate">
        </tpcreative.co.qrscanner.common.preference.MyPreference>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_share"
            android:title="@string/share"
            android:key="@string/key_share"/>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_help"
            android:title="@string/help"
            android:key="@string/key_help"/>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_report"
            android:title="@string/support"
            android:summary="@string/support_detail"
            android:key="@string/key_support"/>

        <tpcreative.co.qrscanner.common.preference.MyPreference
            app:allowDividerAbove="false"
            app:allowDividerBelow="false"
            android:layout="@layout/custom_preferences_item_small"
            android:icon="@drawable/ic_version"
            android:key="@string/key_version"
            android:summary=""
            android:title="@string/version"/>

    </tpcreative.co.qrscanner.common.preference.MyPreferenceCategory>
</androidx.preference.PreferenceScreen>