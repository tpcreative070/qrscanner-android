<resources>


    <style name="PopupMenuDark" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="AppBaseThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/material_orange_100</item>
        <item name="android:textColorSecondaryInverse">@color/material_orange_100</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenuDark</item>
    </style>


    <!-- Theme for SwitchDateTime -->

    <style name="Theme.SwitchDateTime" parent="AppBaseThemeDark">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/brandon_regs</item>
    </style>


    <!-- Header Background -->
    <style name="Theme.SwitchDateTime.HeaderBackground">
        <item name="android:background">@color/colorDark</item>
    </style>

    <!-- Content Background -->
    <style name="Theme.SwitchDateTime.ContentBackground">
        <item name="android:background">@color/colorContentBackground</item>
    </style>

    <!-- Title -->
    <style name="Theme.SwitchDateTime.TitleDateTimeLabelText">
        <item name="android:textSize">@dimen/title_date_time_label_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Icon -->
    <style name="Theme.SwitchDateTime.IconDateTimeSwitch">
        <item name="android:src">@drawable/baseline_invert_colors_white_48</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- Time  -->
    <style name="Theme.SwitchDateTime.Time">
        <item name="timeCircleColor">@color/colorCircleClock</item>
        <item name="timeCenterColor">@color/colorAccent</item>
        <item name="timeAmPmBackgroundColor">@color/material_teal_100</item>
        <item name="timeAmPmSelectBackgroundColor">@color/colorAccent</item> <!-- Alpha is apply-->
        <item name="timeAmPmTextColor">@color/white</item>
        <item name="timeSelectorColor">@color/white</item>
        <item name="timeCircularNumbersColor">@color/colorBlueLight</item>
    </style>

    <!-- Time Label -->
    <style name="Theme.SwitchDateTime.TimeLabelText">
        <item name="android:textSize">@dimen/time_label_text</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Theme.SwitchDateTime.TimeLabelAmPm">
        <item name="android:textSize">@dimen/time_label_AmPm</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Date -->
    <style name="Theme.SwitchDateTime.Date">
        <item name="mcv_selectionColor">@color/colorAccent</item>
    </style>

    <!-- Date Label -->
    <style name="Theme.SwitchDateTime.DateLabelMonthAndDay">
        <item name="android:textSize">@dimen/date_label_month_and_day</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Year Selected-->
    <style name="Theme.SwitchDateTime.Year">
        <item name="colorCircleIndicator">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

    <!-- Year Label -->
    <style name="Theme.SwitchDateTime.DateLabelYear">
        <item name="android:textSize">@dimen/date_label_year</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
